@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>&nbsp;&nbsp; Create New
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Time
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="40%">
                        @Html.DisplayFor(modelItem=>obj.Name)
                    </td>
                    <td width="20%">
                        @obj.DisplayOrder
                    </td>
                    <td width="20%">
                        @obj.CreatedDateTime
                    </td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2" ><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>